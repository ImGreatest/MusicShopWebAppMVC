@using Microsoft.EntityFrameworkCore
@model List<Performer>
@{
    ViewData["Title"] = "Available Countries";
}
<h1>@ViewData["Title"]</h1>

<div class="table-responsive" style="margin-top: 50px">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td contenteditable="true">@i.Id</td>
                <td contenteditable="true">@i.Name</td>
            </tr>
        }
        </tbody>
    </table>
    <div style="margin-top: 50px">
        <form method="post" action="/Performer/Update">
            <input type="number" placeholder="Name exist performer" name="updatingPerformer"/>
            <input type="text" placeholder="Name new performer" name="newPerformer"/>
            <button class="btn btn-warning" type="submit" onclick="showAlert()">Update</button>
            <div id="alert" class="alert-warning" style="display: none">Success!</div>
        </form>
    </div>
</div>

<div style="margin-top: 50px">
    <form method="post" action="/Performer/Adding">
        <input type="number" placeholder="ID new performer" name="newPerformerID"/>
        <input type="text" placeholder="Name new performer" name="newPerformer"/>
        <button class="btn btn-success" type="submit" onclick="showAlert2()">Add</button>
        <div id="alert2" class="alert-success" style="display: none">Success!</div>
    </form>
</div>

<div style="margin-top: 50px">
    <form method="post" action="/Performer/Delete">
        <input type="text" name="deletePerformer" placeholder="Name performer to delete"/>
        <button class="btn btn-danger" type="submit" onclick="showAlert3()">Delete</button>
        <div id="alert3" class="alert-danger" style="display: none">Success!</div>
    </form>
</div>

<script>
function showAlert(){
    document.getElementById("alert").style.display = "block";    
}

function showAlert2(){
    document.getElementById("alert2").style.display = "block";    
}

function showAlert3(){
    document.getElementById("alert3").style.display = "block";    
}
</script>