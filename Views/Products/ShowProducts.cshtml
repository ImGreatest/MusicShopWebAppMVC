@using Microsoft.EntityFrameworkCore
@model List<Product>
@{
    ViewData["Title"] = "Available Products";
}
<h1>@ViewData["Title"]</h1>

<div class="table-responsive" style="margin-top: 50px">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Type</th>
            <th scope="col">Label</th>
            <th scope="col">Style</th>
            <th scope="col">Album</th>
            <th scope="col">Performer</th>
            <th scope="col">Condition</th>
            <th scope="col">Cost</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td contenteditable="true">@i.Id</td>
                <td contenteditable="true">@i.TypeProduct</td>
                <td contenteditable="true">@i.Label</td>
                <td contenteditable="true">@i.Style</td>
                <td contenteditable="true">@i.Album</td>
                <td contenteditable="true">@i.Performer</td>
                <td contenteditable="true">@i.Condition</td>
                <td contenteditable="true">@i.Cost</td>
            </tr>
        }
        </tbody>
    </table>
    <div style="margin-top: 50px">
        <form method="post" action="/Products/Update">
            <input type="number" placeholder="Name exist performer" name="updatingPerformer"/>
            <input type="text" placeholder="Name new performer" name="newPerformer"/>
            <button class="btn btn-warning" type="submit" onclick="showAlert()">Update</button>
            <div id="alert" class="alert-warning" style="display: none">Success!</div>
        </form>
    </div>
</div>

<div style="margin-top: 50px">
    <form method="post" action="/Products/Adding">
        <input type="number" placeholder="ID new product" name="newProductID"/>
        <input type="text" placeholder="Name new product" name="newProduct"/>
        <input type="text" placeholder="Name Label" name="newLabel"/>
        <input type="text" placeholder="Name Style" name="newStyles"/>
        <input type="number" placeholder="Name Album" name="newAlbum"/>
        <input type="number" placeholder="Name Performer" name="newPerformer"/>
        <input type="text" placeholder="Name Condition" name="newCondition"/>
        <input type="number" placeholder="Name Cost" name="newCost"/>
        <button class="btn btn-success" type="submit" onclick="showAlert2()">Add</button>
        <div id="alert2" class="alert-success" style="display: none">Success!</div>
    </form>
</div>

<div style="margin-top: 50px">
    <form method="post" action="/Products/Delete">
        <input type="number" name="deleteProduct" placeholder="ID product to delete"/>
        <button class="btn btn-danger" type="submit" onclick="showAlert3()">Delete</button>
        <div id="alert3" class="alert-danger" style="display: none">Success!</div>
    </form>
</div>

<script>
function showAlert(){
    document.getElementById("alert").style.display = "block";    
}

function showAlert2(){
    document.getElementById("alert2").style.display = "block";    
}

function showAlert3(){
    document.getElementById("alert3").style.display = "block";    
}
</script>